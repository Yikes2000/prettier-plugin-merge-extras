{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "cache": false
    },
    "lint": {},
    "format": {
      "dependsOn": ["bundle-entry#build"]
    },
    "format:fix": {
      "dependsOn": ["bundle-entry#build"]
    },
    "test": {
      "dependsOn": ["bundle-entry#build"]
    },
    "prettier-plugin-merge#prepare-release": {
      "cache": false,
      "dependsOn": ["bundle-entry#build"]
    }
  }
}
